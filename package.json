{
  "name": "salt-agent",
  "version": "0.1.0",
  "description": "Coding agent with OpenAI, HTTP server for IM integration and Web UI",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/main.ts",
    "build": "tsup src/main.ts --format esm --dts",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build"
  },
  "dependencies": {
    "openai": "^4.77.0",
    "hono": "^4.6.14",
    "@hono/node-server": "^1.13.7",
    "nanoid": "^5.0.9",
    "@sinclair/typebox": "^0.34.9",
    "partial-json": "^0.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
